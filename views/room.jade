!!!
html
  head
    title= title
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script(src="http://maps.google.com/maps/api/js?sensor=true")
    script(src='/javascripts/exif.js')
    script(src='/javascripts/binaryajax.js')
    script(src='/javascripts/canvasResize.js')
    script(src='/javascripts/jquery.cookie.js')
    script(src='/javascripts/chat.js')

    link(rel='stylesheet', href='/stylesheets/style.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="MobileOptimized", content="320")
  body
    #map
    #info
    #config-toggle config
    #config
      form#config-form
        p
          span Your name
          input#name
        p
          input(type='submit') apply
          button.cancel cancel
    ul#users
    form#textform
      input#text
      button(type="submit") post
      button#uploadphoto photo
    input#photo-input(type="file", accept="image/*")
    ul#log
    #draw
      #draw-control
        button.draw-cmd(data-draw-cmd="color #000") black
        button.draw-cmd(data-draw-cmd="color #f00") red
        button.draw-cmd(data-draw-cmd="color #0f0") green
        button.draw-cmd(data-draw-cmd="color eraser") eraser
        button.draw-cmd(data-draw-cmd="size 1") small
        button.draw-cmd(data-draw-cmd="size 4") medium
        button.draw-cmd(data-draw-cmd="size 10") large
        button.draw-cmd(data-draw-cmd="clear") clear
        button#draw-post post
        button#draw-cancel cancel
      #draw-field
        canvas#canvas
        img#draw-bg
    script
      $(function () {
        var client = new ChatClient({
          roomid: '#{roomid}'
          , socket: '#{socket}'
        });
      });
  footer
    a(href="/") backtotop
